<div class="bg-gray-100 overflow-hidden rounded-lg shadow">
    <div class="px-4 py-5 border-b border-gray-200">
        <div class="-ml-4 -mt-4 flex justify-between items-center flex-wrap flex-no-wrap">
            <div class="ml-4 mt-4">
                <div class="flex items-center">
                    <div >
                        <h3 class="text-lg my-0 leading-6 font-medium text-gray-900">
                            Google Cloud Resources
                        </h3>
                    </div>
                </div>
            </div>
            <div class="ml-4 mt-4 flex-shrink-0 flex">
            </div>
        </div>
    </div>

    {% for resource in serviceResources %}
    <div>
        <div class="flex items-center px-4 py-5 bg-gray-200">
            <h2 class="text-lg my-0 leading-5 font-medium text-gray-700">
                {{ resource.projectName }}
            </h2>
        </div>
    </div>
    <div class="mx-2 my-2">
        <table class="text-left w-full rounded-md">
            <thead>
            <tr>
                <th class="py-2 px-4 font-bold uppercase text-sm text-gray-600">
                    Role
                </th>
                <th class="py-2 px-4 font-bold uppercase text-sm text-gray-600">
                    Members
                </th>
            </tr>
            </thead>
                {% for policy in resource.projectIamPolicy %}
                    <tr class="text-gray-800">
                        <td class="py-2 px-4" valign="top">
                            {{ policy.role }}
                        </td>
                        <td class="py-2 px-4" valign="top">
                            {{ policy.members.join('<br />') | safe }}
                        </td>
                    </tr>
                {% endfor %}
        </table>
    </div>
    {% endfor %}
</div>