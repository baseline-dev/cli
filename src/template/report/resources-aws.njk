<div class="bg-gray-100 overflow-hidden sm:rounded-lg sm:shadow sm:mb-4 sm:border-b sm:border-gray-200">
    <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
        <div class="-ml-4 -mt-4 flex justify-between items-center flex-wrap sm:flex-no-wrap">
            <div class="ml-4 mt-4">
                <div class="flex items-center">
                    <div >
                        <h3 class="text-lg my-0 leading-6 font-medium text-gray-900">
                            AWS Resources
                        </h3>
                    </div>
                </div>
            </div>
            <div class="ml-4 mt-4 flex-shrink-0 flex">
            </div>
        </div>
    </div>
    <div class="sm:mx-2 my-2">
        <table class="text-left w-full rounded-md">
            <thead>
            <tr>
                <th class="py-2 px-4 font-bold uppercase text-sm text-gray-600">
                    AWS Account Name
                </th>
                <th class="py-2 px-4 font-bold uppercase text-sm text-gray-600">
                    Status
                </th>
            </tr>
            </thead>
            {% for resource in serviceResources %}
                <tr class="text-gray-800">
                    <td class="py-2 px-4">
                        {{ resource.organizationName }}<br />
                        <small class="text-sm text-gray-500">{{ resource.organizationEmail }}</small>
                    </td>
                    <td class="py-2 px-4">
                        {{ resource.organizationStatus }}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
</div>